{
  "name": "manualized-toc",
  "displayName": "Manualized Toc",
  "publisher": "tomo-iris",
  "description": "generate TOC from comments, i.e., you can edit them manually",
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "views": {
      "vsclauncher": [
        {
          "id": "vsclauncherView",
          "name": "TOC"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsclauncher",
          "title": "TOC",
          "icon": "img/toc-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "manualized_toc",
      "properties": {
        "manualized_toc.comment_symbols": {
          "type": "object",
          "description": "update information for comment out symbols joining with spaces,\nyou should check https://code.visualstudio.com/docs/languages/identifiers#_known-language-identifiers to know the expression for language\n`<lang>: <symbols> <symbols>, <lang2>: <symbols> ...`",
          "default": {
              "javascript": ["//"],
              "python": ["#"],
              "c": ["//"],
              "cpp": ["//"],
              "bash": ["#"],
              "shellscript": ["#"],
              "php": ["#", "//"],
              "typescript": ["//"]
          }
        },
        "manualized_toc.header_symbols": {
          "type": "object",
          "description": "update information for header symbols,\n`<lang>: <symbols>, <lang2>: <symbols> ...`",
          "default":{
            "markdown": ["#"]
        }
        },
        "manualized_toc.depth_parent_max": {
          "type": "integer",
          "default": 3,
          "enum": [
            0,
            1,
            2,
            3,
            4,
            5,
            6
          ],
          "description": "Contents with larger depth in TOC are folded as children. No contents are folded if the inputted value is not positive."
        },
        "manualized_toc.require_spaces_after": {
          "type": "boolean",
          "default": false,
          "description": "require spaces afetr header symbols"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TomoTom0/manualized-toc-forVScode.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
